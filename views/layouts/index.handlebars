<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <img src="burger.gif" alt="burger"style="display: block;" />
  		<h1 class="display-3 text-center"><strong>EAT A BURGER<strong></h1>
  </div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-4 text-center" class="task" id="devourOption">
			<p>Choose Your Burger</p>
				{{!-- <div class="row"> --}}
					{{!-- <div class="col-md-9 text-center"> --}}
						{{#each burger_data}}
						<pre>{{this.id}}. {{this.burger_name}}</pre>
						{{!-- {{#unless this.devoured}} --}}
					{{!-- </div>
					<div class="col-md-3 text-center"> --}}
						<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						{{!-- <input type="hidden" name="burger_id" type="text" value={{this.id}}> --}}
						<button type="submit" class="btn btn-default">DEVOUR IT</button>
						</form>
					{{!-- </div> --}}
			{{!-- {{/unless}} --}}
						{{/each}}
		</div>
		
		<div class="col-md-4 text-center" id="suggestions">
			<p>Don't see any good options listed? Submit a suggestion for future burgers below!</p>
			{{!-- <div class="col-xs-12 text-center enter_section"> --}}
				<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-center-button">SUBMIT</button>
				</form>
		</div>

		<div class="col-md-4 text-center" class="task" id="wasDevoured">
			<p>Burgers You've Devoured</p>
			{{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" id="devouredIt" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>
